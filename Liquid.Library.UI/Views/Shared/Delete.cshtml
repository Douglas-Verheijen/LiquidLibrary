
@{
    ViewBag.Title = "";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-content">
    <div class="product-info-wrapper">
        <div class="col">
            <div class="product-info" ng-controller="@ViewBag.Action" ng-cloak>
                <div class="product-info-heading">{{model.Name}}</div>
                <div class="product-info-content">
                    <form ng-submit="submit()" role="form" class="ng-pristine ng-valid ng-scope ng-valid-email">

                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)

                        <div class="form-group">
                            <span class="form-control">Are you sure you want to delete?</span>
                        </div>
                        <div class="form-group">
                            <span class="form-submit">
                                <input type="submit" value="Delete" />
                            </span>
                        </div>
                    </form>
                </div>
                <div class="product-info-footer">
                    @Html.ActionLink("Back to List", "Index")
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
