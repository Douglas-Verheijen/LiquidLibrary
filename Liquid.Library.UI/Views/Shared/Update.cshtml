
@{
    ViewBag.Title = "Books";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-content">
    <div class="product-info-wrapper">
        <div class="col">
            <div class="product-info" ng-controller="@ViewBag.Action" ng-cloak>
                <div class="product-info-heading">{{model.Name}}</div>
                <div class="product-info-content">
                    <form ng-submit="submit()" role="form" class="ng-pristine ng-valid ng-scope ng-valid-email">

                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                        <div class="form-group">
                            <span class="form-control-label">Name:</span>
                            <span class="form-control">
                                <input type="text" ng-model="model.Name" />
                            </span>
                        </div>
                        <div class="form-group">
                            <span class="form-control-label">Author:</span>
                            <span class="form-control">
                                <input type="text" ng-model="model.Author" />
                            </span>
                        </div>
                        <div class="form-group">
                            <span class="form-control-label">ISBN:</span>
                            <span class="form-control">
                                <input type="text" ng-model="model.ISBN" />
                            </span>
                        </div>
                        <div class="form-group">
                            <span class="form-submit">
                                <input type="submit" value="Update" />
                            </span>
                        </div>
                    </form>
                </div>
                <div class="product-info-footer">
                    @Html.ActionLink("Back to List", "Index")
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
